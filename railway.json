{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/web && npm install --production=false && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/web && npx next start -H 0.0.0.0 -p ${PORT:-3000}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
